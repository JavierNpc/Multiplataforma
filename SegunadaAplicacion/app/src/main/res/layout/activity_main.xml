<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="InvalidId">

    <!-- Bloque central -->
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/b1"
        />

    <!-- Bloques azules -->
    <View
        android:id="@+id/a1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        app:layout_constraintRight_toLeftOf="@id/b1"
        app:layout_constraintBottom_toTopOf="@id/b1"/>

    <View
        android:id="@+id/a2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintBottom_toTopOf="@id/b1"
        />


    <View
        android:id="@+id/a3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintTop_toBottomOf="@id/b1"/>


   <View
       android:id="@+id/a4"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:background="@color/teal_200"
       app:layout_constraintRight_toLeftOf="@id/b1"
       app:layout_constraintTop_toBottomOf="@id/b1"
       />

   <!-- Bloque purpuras  -->
    <View
        android:id="@+id/p1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_700"
        app:layout_constraintLeft_toRightOf="@id/a1"
        app:layout_constraintBottom_toTopOf="@id/a1"/>

    <View
       android:id="@+id/p2"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:background="@color/purple_700"
       app:layout_constraintLeft_toRightOf="@id/a4"
       app:layout_constraintTop_toBottomOf="@id/a4"/>


      <View
          android:id="@+id/p3"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="@color/purple_700"
          app:layout_constraintRight_toLeftOf="@id/a4"
          app:layout_constraintTop_toBottomOf="@id/a4"/>

      <View
          android:id="@+id/p4"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="@color/purple_700"
          app:layout_constraintLeft_toRightOf="@id/a3"
          app:layout_constraintTop_toBottomOf="@id/a4" />



    </androidx.constraintlayout.widget.ConstraintLayout>

